{
    "compilerOptions": {
        "composite": true,
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "noUnusedLocals": false,
        "importHelpers": true,
        "removeComments": false,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "useUnknownInCatchVariables": false,
        "target": "ES2021",
        "sourceMap": false,
        "allowJs": false,
        "strict": true,
        "strictNullChecks": false,
        "types": ["node"]
    },
    "references": [
        { "path": "./auth/tsconfig.build.json" },
        { "path": "./cache/tsconfig.build.json" },
        { "path": "./core/tsconfig.build.json" },
        { "path": "./email/tsconfig.build.json" },
        { "path": "./graphql/tsconfig.build.json" },
        { "path": "./http/tsconfig.build.json" },
        { "path": "./keyv/tsconfig.build.json" },
        { "path": "./openapi/tsconfig.build.json" },
        { "path": "./protobuf/tsconfig.build.json" },
        { "path": "./repository/tsconfig.build.json" },
        { "path": "./sandbox/tsconfig.build.json" },
        { "path": "./testing/tsconfig.build.json" },
        { "path": "./throttler/tsconfig.build.json" },
        { "path": "./vault/tsconfig.build.json" },
        { "path": "./ws/tsconfig.build.json" }
    ],
    "exclude": ["node_modules", "dist", "src/protos", "**/*.spec.ts"]
}
